<Window x:Class="MaskURLTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MASKURL Tool" Height="1000" Width="1000" ResizeMode="NoResize">
    <Grid Background="#1e1e1e">
        <TextBlock Text="Original URL:" Foreground="White" Margin="20,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="txtOriginal" Margin="20,45,20,0" Height="30" VerticalAlignment="Top"/>

        <TextBlock Text="Mask As (Fake Domain):" Foreground="White" Margin="20,85,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="txtFake" Margin="20,110,20,0" Height="30" VerticalAlignment="Top"/>

        <Button Name="btnGenerate" Content="Generate Masked URL" Margin="20,160,20,0" Height="35" VerticalAlignment="Top" Click="btnGenerate_Click"/>

        <TextBox Name="txtOutput" Margin="20,0,20,20" Height="30" IsReadOnly="True" Background="#2e2e2e" Foreground="Lime" BorderBrush="Gray"/>
    </Grid>
</Window>
